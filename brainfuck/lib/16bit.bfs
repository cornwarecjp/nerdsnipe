################################################################################

const16(a;b;c;d;y)
{
	!
	?   0() a *10(y) b
	? > 0() c *10(< y) d
	? ~
}

zero16()   {0()       > 0()       <}
move16(y)  {move(y)   > move(y)   <}
copy16(y;z){copy(y;z) > copy(y;z) <}
write16()  {write()   > write()   <}

#y = bool(x)
#note: y is 8-bit
#stack: 2 bytes
bool16(x; y; stack)
{
	or(x; x >; y; stack; stack >)
}

#stack: 2 bytes
decr16(stack)
{
	lsb(){>}
	msb(){}

	ifelse(lsb();;        #if lsb == 0
		-                 #    msb--
		;stack;stack >)

	!
	? lsb() -             #lsb--
	? ~
}


#stack: 2 bytes
incr16(stack)
{
	lsb(){>}
	msb(){}

	!
	? lsb() +            #lsb++
	? ~

	ifelse(lsb();;       #if lsb == 0
		+                #msb++
		;stack;stack >)
}

